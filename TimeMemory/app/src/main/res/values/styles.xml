<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="colorPrimary">#979797</item>
        <item name="colorPrimaryDark">#979797</item>
    </style>

    <style name="SplashTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/common_background</item>
    </style>

    <style name="FloatTheme" parent="AppBaseTheme">
        <item name="icActionEdit">@drawable/ic_folder_check</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab.Light</item>
    </style>

    <style name="AppTheme.Fab.Light" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@color/yellow_E3</item>
    </style>

    <style name="searchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@color/common_background</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>


    <style name="LaunchTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_common" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="MyDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!-- 界面外不消失 -->
    </style>

    <style name="login_et_style">
        <item name="android:textSize">@dimen/tv_14_sp</item>
        <item name="android:textColorHint">@color/gray_A0</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="main_activity_bottom_menu_item">
        <item name="android:textSize">@dimen/tv_10_sp</item>
        <item name="android:textColor">@color/main_tv</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/common_3dp</item>
    </style>

    <style name="main_activity_bottom_menu_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/common_3dp</item>
        <item name="android:layout_marginTop">@dimen/common_8dp</item>
    </style>


    <style name="main_activity_bottom_menu_dot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_5dp</item>
        <item name="android:src">@drawable/red_dot</item>
        <item name="android:layout_alignRight">@dimen/common_3dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="common_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_58</item>
        <item name="android:textSize">@dimen/tv_16_sp</item>
    </style>

    <style name="common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_divider_height</item>
        <item name="android:background">@color/grey_divider</item>
    </style>


    <style name="common_radio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_48dp</item>
        <item name="android:background">@drawable/mine_ll</item>
        <item name="android:paddingLeft">@dimen/common_14dp</item>
        <item name="android:paddingRight">@dimen/common_14dp</item>
        <item name="android:textColor">@color/grey_58</item>
        <item name="android:textSize">@dimen/tv_14_sp</item>
    </style>

    <style name="common_memory_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_48dp</item>
        <item name="android:layout_marginBottom">@dimen/common_1dp</item>
        <item name="android:background">@drawable/mine_ll</item>
        <item name="android:textColor">@color/grey_48</item>
        <item name="android:textSize">@dimen/tv_16_sp</item>
    </style>

    <style name="common_msg_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_14_sp</item>
        <item name="android:textColor">@color/gray_A2</item>
    </style>

    <style name="common_time_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_9D</item>
        <item name="android:textSize">@dimen/tv_13_sp</item>
        <item name="android:drawablePadding">@dimen/common_3dp</item>
    </style>

    <style name="common_time_tv2" parent="common_time_tv">
        <item name="android:padding">@dimen/common_5dp</item>
    </style>

    <style name="tabLayoutTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="actionSheet" parent="Widget.AppCompat.Button.Borderless"/>

    <style name="FloatingActionButton" parent="android:Widget.ImageButton">
        <item name="floatingActionButtonSize">normal</item>
    </style>

    <style name="FloatingActionButton.Light" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@android:color/primary_text_dark</item>
    </style>

    <style name="ActionSheetStyle">
        <item name="actionSheetBackground">@color/grey_F0</item>
        <item name="otherButtonBackground">@drawable/mine_ll</item>
        <item name="cancelButtonBackground">@drawable/mine_ll</item>
        <item name="cancelButtonTextColor">@color/common_font_black</item>
        <item name="otherButtonTextColor">@color/common_font_black</item>
        <item name="actionSheetPadding">0dp</item>
        <item name="otherButtonSpacing">1.5dp</item>
        <item name="cancelButtonMarginTop">8dp</item>
        <item name="actionSheetTextSize">16sp</item>
    </style>
    <!-- ActionSheet  begin -->
    <style name="style_normal_actionsheet" parent="@style/AppTheme">
        <item name="actionSheetStyle">@style/ActionSheetStyle</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <declare-styleable name="JazzyViewPager">
        <attr name="style">
            <enum name="standard" value="0"/>
            <enum name="tablet" value="1"/>
            <enum name="cubein" value="2"/>
            <enum name="cubeout" value="3"/>
            <enum name="flipvertical" value="4"/>
            <enum name="fliphorizontal" value="5"/>
            <enum name="stack" value="6"/>
            <enum name="zoomin" value="7"/>
            <enum name="zoomout" value="8"/>
            <enum name="rotateup" value="9"/>
            <enum name="rotatedown" value="10"/>
            <enum name="accordion" value="11"/>
        </attr>
        <attr name="fadeEnabled" format="boolean"/>
        <attr name="outlineEnabled" format="boolean"/>
        <attr name="outlineColor" format="color|reference"/>
    </declare-styleable>

    <style name="Widget"/>
    <!-- Base theme for Swipe Back. -->
    <style name="Widget.SwipeBack">
        <item name="sbSwipeBackBackground">@color/sb__defaultBackground</item>
        <item name="sbContentBackground">?android:attr/windowBackground</item>
    </style>

    <style name="ThemeSwipeBack" parent="@style/Theme.Swipe.Back">
    </style>

    <style name="Theme.Swipe.Back" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="AppDatePicker" parent="android:Theme.Holo.Light"/>

    <style name="Crop"></style>

    <style name="Crop.DoneCancelBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/crop__bar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@drawable/crop__divider</item>
        <item name="android:showDividers" tools:ignore="NewApi">middle</item>
        <item name="android:dividerPadding" tools:ignore="NewApi">12dp</item>
        <item name="android:background">@color/crop__button_bar</item>
    </style>

    <style name="Crop.ActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/crop__selectable_background</item>
    </style>

    <style name="Crop.ActionButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">20dp</item>
        <!-- Offsets left drawable -->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/crop__button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Crop.ActionButtonText.Done">
        <item name="android:drawableLeft">@drawable/crop__ic_done</item>
        <item name="android:text">@string/crop__done</item>
    </style>

    <style name="Crop.ActionButtonText.Cancel">
        <item name="android:drawableLeft">@drawable/crop__ic_cancel</item>
        <item name="android:text">@string/crop__cancel</item>
    </style>

    <style name="PopMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow</item>
        <item name="android:windowExitAnimation">@anim/pophide</item>
    </style>

</resources>