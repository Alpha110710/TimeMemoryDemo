<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@id/searchuser_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_12dp"
        android:src="@drawable/login_photo"
        />

    <TextView
        android:id="@id/searchuser_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_14dp"
        android:layout_marginTop="@dimen/common_5dp"
        android:layout_toRightOf="@id/searchuser_iv"
        android:singleLine="true"
        android:textColor="@color/common_font_black"
        android:textSize="@dimen/tv_16_sp"/>

    <TextView
        android:id="@id/searchuserp_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchuser_tv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_14dp"
        android:layout_toRightOf="@id/searchuser_iv"
        android:textColor="@color/grey_48"
        android:textSize="@dimen/tv_13_sp"/>

    <View
        android:id="@id/view_line"
        style="@style/common_line"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>