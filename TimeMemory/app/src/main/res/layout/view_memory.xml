<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@id/date_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_52dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_14dp"
            android:text="0000"
            android:textColor="@color/grey_48"
            android:textSize="@dimen/tv_16_sp"/>

        <View
            style="@style/common_line"
            android:layout_height="@dimen/common_2dp"
            android:layout_marginBottom="@dimen/common_6dp"
            android:background="@color/yellow_E3"/>

        <TextView
            android:id="@id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_52dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_14dp"
            android:text="0000"
            android:textColor="@color/grey_48"
            android:textSize="@dimen/tv_16_sp"/>
    </LinearLayout>

    <View
        android:id="@+id/view_bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff33ff"
        />
</RelativeLayout>