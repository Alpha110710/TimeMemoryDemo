<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <ImageView
        android:id="@id/app_cancle"
        android:layout_width="@dimen/common_40dp"
        android:layout_height="@dimen/common_40dp"
        android:layout_marginRight="@dimen/common_5dp"
        android:layout_marginTop="@dimen/common_5dp"
        android:padding="@dimen/common_10dp"
        android:src="@drawable/image_close"
        />

    <TextView
        android:id="@id/import_circle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_40dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/common_3dp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/import_circle"
        android:textColor="@color/black_26"
        android:textSize="@dimen/tv_16_sp"
        />

    <com.time.memory.gui.GridViewWithHeaderAndFooter
        android:id="@id/swipe_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_14dp"
        android:listSelector="@color/transparent"
        android:numColumns="3"

        />
</LinearLayout>