<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_10dp"
    app:slm_headerDisplay="inline|sticky"
    >

    <LinearLayout
        android:layout_width="@dimen/common_60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@id/time_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/browen_BB"
            android:textSize="@dimen/tv_20_sp"
            android:textStyle="bold"
            />

        <View
            style="@style/common_line"
            android:layout_marginLeft="@dimen/common_16dp"
            android:layout_marginRight="@dimen/common_16dp"
            android:background="@color/grey_E1"
            />

        <TextView
            android:id="@id/time_year_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/browen_BB"
            android:textSize="@dimen/tv_14_sp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/common_16dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_5dp"
        android:src="@drawable/memory_dot"
        />
</LinearLayout>
