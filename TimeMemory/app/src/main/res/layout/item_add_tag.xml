<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@id/tag_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@id/tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_6dp"
            android:layout_marginRight="@dimen/common_12.5dp"
            android:layout_marginTop="@dimen/common_8dp"
            android:background="@drawable/tag_tv_bg"
            android:textColor="@color/tagtv_bg"
            android:textSize="@dimen/tv_16_sp"
            tools:text="测试"
            />
    </RelativeLayout>

    <ImageView
        android:id="@id/tag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/tag_rl"
        android:src="@drawable/tag_delete"
        />
</RelativeLayout>
