<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/common_14dp"
                android:paddingRight="@dimen/common_14dp">

    <View
        android:id="@id/view_line_up"
        style="@style/common_line"
        android:background="@color/grey_C9"
        />

    <CheckBox
        android:id="@id/nosee_check_child"
        android:layout_width="@dimen/common_32dp"
        android:layout_height="@dimen/common_45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_40dp"
        android:background="@null"
        android:button="@drawable/nosee_checkbox"
        android:checked="true"/>

    <TextView
        android:id="@id/nosee_desc_tv"
        style="@style/common_tv"
        android:layout_height="@dimen/common_45dp"
        android:layout_toRightOf="@id/nosee_check_child"
        android:singleLine="true"
        android:text="一号"
        android:textColor="@color/grey_48"
        />

    <View
        android:id="@id/view_line"
        style="@style/common_line"
        android:layout_below="@id/nosee_desc_tv"
        android:background="@color/grey_C9"
        />
</RelativeLayout>
