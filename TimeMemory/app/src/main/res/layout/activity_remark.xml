<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/activity_common_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_16dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x15"
        android:text="@string/mine_remarkname"
        android:textColor="@color/gray_A1"
        />

    <View
        style="@style/common_line"
        android:layout_marginTop="@dimen/common_6dp"
        />

    <com.time.memory.gui.ClearEditText
        android:id="@id/mine_remark_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_45dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/common_10dp"
        android:drawableRight="@drawable/list_filter_close_button_img"
        android:hint="@string/update_remark_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="15"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/common_12dp"
        android:singleLine="true"
        android:textColor="@color/common_font_black"
        android:textColorHint="@color/gray_B5"
        android:textSize="@dimen/tv_14_sp"/>

    <View style="@style/common_line"/>
</LinearLayout>