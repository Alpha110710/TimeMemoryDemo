<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >

    <include layout="@layout/activity_common_title"/>

    <View
        android:id="@id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@id/qrcode_iv"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@id/qrcode_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcode_iv"
        android:layout_marginTop="@dimen/common_14dp"
        android:gravity="center"
        android:textColor="@color/common_font_black"
        android:textSize="@dimen/tv_16_sp"

        />

</RelativeLayout>