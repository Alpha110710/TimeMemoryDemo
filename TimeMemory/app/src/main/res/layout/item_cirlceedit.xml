<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:layout_marginTop="@dimen/common_1dp"
              android:background="@drawable/mine_ll"
              android:orientation="horizontal"
    >

    <TextView
        android:id="@id/circle_editname_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:maxLength="10"
        android:paddingLeft="@dimen/common_10dp"
        android:textColor="@color/black_4A"
        android:textSize="@dimen/tv_15_sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@id/circle_editadmin_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:paddingLeft="@dimen/common_10dp"
        android:paddingRight="@dimen/common_10dp"
        android:text="@string/group_creater"
        android:textColor="@color/grey_75"
        android:textSize="@dimen/tv_13_sp"
        />
</LinearLayout>