<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <include layout="@layout/activity_common_title"/>

    <LinearLayout
        android:id="@id/mine_info_ll"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y48"
        android:layout_marginTop="@dimen/common_14dp"
        android:background="@drawable/mine_ll"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/mine_photo_iv"
            android:layout_width="@dimen/x54"
            android:layout_height="@dimen/x54"
            android:layout_marginLeft="@dimen/common_12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/friend_photo"/>

        <TextView
            android:id="@id/main_mine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_12dp"
            android:layout_marginRight="@dimen/common_10dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ercode"
            android:gravity="center_vertical"
            android:textColor="@color/grey_52"
            android:textSize="@dimen/tv_14_sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_14dp"
            android:drawableRight="@drawable/arrow_right_grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/mine_push_ll"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/common_8dp"
        android:layout_marginTop="@dimen/common_8dp"
        android:background="@drawable/mine_ll"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_12dp"
            android:src="@drawable/complain"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:text="@string/setting_push"
            android:textColor="@color/grey_52"
            android:textSize="@dimen/tv_14_sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_14dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_right_grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/mine_statist_ll"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/common_8dp"
        android:layout_marginTop="@dimen/common_8dp"
        android:background="@drawable/mine_ll"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_12dp"
            android:src="@drawable/statistics"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:text="@string/setting_statistics"
            android:textColor="@color/grey_52"
            android:textSize="@dimen/tv_14_sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_14dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_right_grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/mine_safe_ll"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/mine_ll"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_12dp"
            android:src="@drawable/safe"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:text="@string/setting_safe"
            android:textColor="@color/grey_52"
            android:textSize="@dimen/tv_14_sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_14dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_right_grey"/>
    </LinearLayout>

    <View style="@style/common_line"/>

    <LinearLayout
        android:id="@id/mine_about_ll"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/mine_ll"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_12dp"
            android:src="@drawable/about"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:text="@string/setting_about"
            android:textColor="@color/grey_52"
            android:textSize="@dimen/tv_14_sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_14dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_right_grey"/>
    </LinearLayout>

    <View style="@style/common_line"/>

    <LinearLayout
        android:id="@id/mine_feed_ll"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/mine_ll"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_12dp"
            android:src="@drawable/feedback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:text="@string/setting_feed"
            android:textColor="@color/grey_52"
            android:textSize="@dimen/tv_14_sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_14dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_right_grey"/>
    </LinearLayout>

    <TextView
        android:id="@id/app_exit"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/common_10dp"
        android:background="@drawable/mine_ll"
        android:gravity="center"
        android:text="@string/setting_login"
        android:textColor="@color/grey_52"
        android:textSize="@dimen/tv_14_sp"
        />
</LinearLayout>