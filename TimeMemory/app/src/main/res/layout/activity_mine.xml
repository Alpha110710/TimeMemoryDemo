<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >

    <include layout="@layout/activity_common_title"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <LinearLayout
                android:id="@id/mine_photo_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y48"
                android:layout_marginTop="@dimen/common_14dp"
                android:background="@drawable/mine_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:layout_weight="1"
                    android:text="@string/mine_pic"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <ImageView
                    android:id="@id/mine_phone_iv"
                    android:layout_width="@dimen/x54"
                    android:layout_height="@dimen/x54"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/friend_photo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_divider_height"
                android:background="@color/grey_divider"/>

            <LinearLayout
                android:id="@id/mine_nick_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:background="@drawable/mine_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/mine_name"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_nick_et"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_10dp"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="right|center_vertical"
                    android:hint="@string/mine_nick_et"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:textColor="@color/grey_82"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"
                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_divider_height"
                android:background="@color/grey_divider"/>

            <LinearLayout
                android:id="@id/mine_trail_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:background="@drawable/mine_ll"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/mine_phone"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_phone_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/grey_82"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"
                    android:visibility="invisible"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_divider_height"
                android:visibility="gone"
                android:background="@color/grey_divider"/>

            <LinearLayout
                android:id="@id/mine_wechat_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:background="@drawable/mine_ll"
                android:visibility="gone"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/mine_wechat"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_phone_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/grey_82"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_divider_height"
                android:background="@color/grey_divider"/>


            <LinearLayout
                android:id="@id/mine_email_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:background="@drawable/mine_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/email"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_email_et"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_10dp"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="right|center_vertical"
                    android:hint="@string/mine_email_et"
                    android:imeOptions="actionDone"
                    android:maxLength="25"
                    android:textColor="@color/grey_82"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"
                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_divider_height"
                android:background="@color/grey_divider"/>

            <LinearLayout
                android:id="@id/mine_ercode_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:background="@drawable/mine_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/mine_ercodes"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_email_et"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_10dp"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawableRight="@drawable/ercode"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@id/mine_sex_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:layout_marginTop="@dimen/common_14dp"
                android:background="@drawable/mine_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/mine_sex"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_sex_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="@string/mine_sex_tv"
                    android:textColor="@color/grey_82"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_divider_height"
                android:background="@color/grey_divider"/>


            <LinearLayout
                android:id="@id/mine_address_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:background="@drawable/mine_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/mine_address"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_address_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10dp"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="@string/mine_address_tv"
                    android:textColor="@color/grey_82"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"/>
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_divider_height"
                android:background="@color/grey_divider"/>


            <LinearLayout
                android:id="@id/mine_sign_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:background="@drawable/mine_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/mine_autograph"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_sign_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10dp"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/common_10dp"
                    android:drawableRight="@drawable/arrow_right_grey"
                    android:gravity="right"
                    android:hint="@string/mine_sign_tv"
                    android:textColor="@color/grey_82"/>
            </LinearLayout>


            <LinearLayout
                android:id="@id/mine_profession_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:layout_marginTop="@dimen/common_14dp"
                android:background="@drawable/mine_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/mine_industry"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_profession_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="@string/mine_profession_tv"
                    android:textColor="@color/grey_82"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_divider_height"
                android:background="@color/grey_divider"/>

            <LinearLayout
                android:id="@id/mine_company_ll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_48dp"
                android:background="@drawable/mine_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12dp"
                    android:text="@string/mine_company"
                    android:textColor="@color/common_font_black"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:id="@id/mine_company_et"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_10dp"
                    android:layout_marginRight="@dimen/common_10dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="right|center_vertical"
                    android:hint="@string/mine_company_et"
                    android:imeOptions="actionDone"
                    android:maxLength="25"
                    android:textColor="@color/grey_82"
                    android:textSize="@dimen/tv_14_sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_14dp"
                    android:drawableRight="@drawable/arrow_right_grey"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>