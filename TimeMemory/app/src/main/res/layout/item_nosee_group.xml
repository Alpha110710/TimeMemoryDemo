<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_45dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/common_14dp"
                android:paddingRight="@dimen/common_14dp">

    <CheckBox
        android:id="@id/nosee_check"
        android:layout_width="@dimen/common_32dp"
        android:layout_height="@dimen/common_45dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:button="@drawable/nosee_checkbox"
        android:checked="true"
        />

    <TextView
        android:id="@id/nosee_desc_tv"
        style="@style/common_tv"
        android:layout_height="@dimen/common_45dp"
        android:layout_toRightOf="@id/nosee_check"
        android:singleLine="true"
        android:text="308寝室(6)"
        android:textColor="@color/grey_48"
        />

    <Button
        android:id="@id/nosee_all_tv"
        style="@style/common_tv"
        android:layout_height="@dimen/common_45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/common_14dp"
        android:paddingRight="@dimen/common_14dp"
        android:singleLine="true"
        android:text="@string/select_all"
        android:textColor="@color/browen"
        android:textSize="@dimen/tv_14_sp"
        />
</RelativeLayout>
