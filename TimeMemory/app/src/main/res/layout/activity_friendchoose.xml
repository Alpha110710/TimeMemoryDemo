<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <include layout="@layout/activity_common_title"/>

    <com.time.memory.gui.ClearEditText
        android:id="@id/friend_search_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_50dp"
        android:layout_marginTop="@dimen/common_10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="@dimen/common_10dp"
        android:drawableRight="@drawable/list_filter_close_button_img"
        android:gravity="center_vertical"
        android:hint="@string/search_phone"
        android:imeOptions="actionSearch"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="@dimen/common_14dp"
        android:paddingRight="@dimen/common_12dp"
        android:singleLine="true"
        android:textColor="@color/common_font_black"
        android:textColorHint="@color/grey_9FD"
        android:textSize="@dimen/tv_14_sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@id/swipe_target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_1dp"
        android:background="@color/white"
        android:overScrollMode="never"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@id/friend_choose_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/common_10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@id/friend_scan_ll"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/mine_ll"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/friend_sacn_iv"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_12dp"
                android:layout_marginRight="@dimen/common_12dp"
                android:src="@drawable/san_qrcode"/>

            <TextView
                android:id="@id/friend_sacn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_7dp"
                android:layout_toRightOf="@id/friend_sacn_iv"
                android:text="@string/friend_sacn_tv"
                android:textColor="@color/common_font_black"
                android:textSize="@dimen/tv_16_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/friend_sacn_tv"
                android:layout_toRightOf="@id/friend_sacn_iv"
                android:text="@string/friend_sacnhint_tv"
                android:textColor="@color/gray_A0"
                android:textSize="@dimen/tv_12_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_marginRight="@dimen/common_14dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_right_grey"/>
        </RelativeLayout>

        <View style="@style/common_line"/>

        <RelativeLayout
            android:id="@id/friend_contacts_ll"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/mine_ll"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/friend_sacn_iv"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_12dp"
                android:layout_marginRight="@dimen/common_12dp"
                android:src="@drawable/constacts_sacn"/>

            <TextView
                android:id="@id/friend_sacn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_7dp"
                android:layout_toRightOf="@id/friend_sacn_iv"
                android:text="@string/friend_constacts_tv"
                android:textColor="@color/common_font_black"
                android:textSize="@dimen/tv_16_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/friend_sacn_tv"
                android:layout_toRightOf="@id/friend_sacn_iv"
                android:text="@string/friend_constactshint_tv"
                android:textColor="@color/gray_A0"
                android:textSize="@dimen/tv_12_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_marginRight="@dimen/common_14dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_right_grey"/>
        </RelativeLayout>

        <View style="@style/common_line"/>

        <RelativeLayout
            android:id="@id/friend_wechat_ll"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/mine_ll"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/friend_sacn_iv"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_12dp"
                android:layout_marginRight="@dimen/common_12dp"
                android:src="@drawable/wechat_friend"/>

            <TextView
                android:id="@id/friend_sacn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/common_7dp"
                android:layout_toRightOf="@id/friend_sacn_iv"
                android:text="@string/friend_wechat_tv"
                android:textColor="@color/common_font_black"
                android:textSize="@dimen/tv_16_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/friend_sacn_tv"
                android:layout_toRightOf="@id/friend_sacn_iv"
                android:text="@string/friend_wechathint_tv"
                android:textColor="@color/gray_A0"
                android:textSize="@dimen/tv_12_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_marginRight="@dimen/common_14dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_right_grey"/>
        </RelativeLayout>

        <View style="@style/common_line"/>

        <RelativeLayout
            android:id="@id/friend_circle_ll"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/mine_ll"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/friend_sacn_iv"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_12dp"
                android:layout_marginRight="@dimen/common_12dp"
                android:src="@drawable/wechar_circle"/>

            <TextView
                android:id="@id/friend_sacn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_7dp"
                android:layout_toRightOf="@id/friend_sacn_iv"
                android:text="@string/friend_circle_tv"
                android:textColor="@color/common_font_black"
                android:textSize="@dimen/tv_16_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/friend_sacn_tv"
                android:layout_toRightOf="@id/friend_sacn_iv"
                android:text="@string/friend_circlehint_tv"
                android:textColor="@color/gray_A0"
                android:textSize="@dimen/tv_12_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_marginRight="@dimen/common_14dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_right_grey"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>