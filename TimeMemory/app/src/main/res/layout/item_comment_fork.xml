<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/common_14dp"
    >

    <ImageView
        android:id="@id/comment_fork_pic_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_40dp"
        android:layout_marginLeft="@dimen/common_14dp"
        android:layout_marginRight="@dimen/common_10dp"
        android:src="@drawable/comment_fork"
        />

    <com.time.memory.gui.MyGridView
        android:id="@id/comment_fork_gv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_10dp"
        android:layout_marginRight="@dimen/common_10dp"
        android:layout_toRightOf="@id/comment_fork_pic_iv"
        android:clickable="false"
        android:gravity="top"
        android:horizontalSpacing="@dimen/common_3dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="7"
        android:verticalSpacing="@dimen/common_3dp"/>

    <View
        style="@style/common_line"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>