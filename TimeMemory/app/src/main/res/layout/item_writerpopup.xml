<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/writer_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_3dp"
        android:paddingTop="@dimen/common_3dp"
        >

        <ImageView
            android:id="@id/writer_add_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_5dp"
            android:padding="@dimen/common_8dp"
            android:src="@drawable/add_writerpic"
            />

        <ImageView
            android:id="@id/writer_del_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_5dp"
            android:padding="@dimen/common_8dp"
            android:src="@drawable/del_writerpic"
            />
    </LinearLayout>

</LinearLayout>