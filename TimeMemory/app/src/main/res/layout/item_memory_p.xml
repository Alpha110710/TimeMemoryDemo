<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal"
              >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/grey_DA"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_10dp"
        android:layout_marginRight="@dimen/common_10dp"
        >
<!--android:text="@string/memory_prompt_name"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/memory_remind_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/memory_prompt_name"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_13_sp"
                />
            <TextView
                android:id="@+id/memory_prompt_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toRightOf="@id/memory_remind_tv"
                android:textColor="@color/red_E7"
                android:textSize="@dimen/tv_13_sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/memory_prompt_name_article"
                android:layout_toRightOf="@id/memory_prompt_name_tv"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_13_sp"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>