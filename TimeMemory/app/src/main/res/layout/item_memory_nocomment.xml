<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_40dp"
        android:layout_marginTop="@dimen/common_16dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_12dp"
        android:text="@string/memory_comment"
        android:textColor="@color/grey_48"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/comment_tag"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_40dp"
        android:layout_marginBottom="@dimen/common_16dp"
        android:layout_marginTop="@dimen/common_5dp"
        android:gravity="center"
        android:text="@string/memory_comment_hint"
        android:textColor="@color/grey_4D"
        />

    <View style="@style/common_line"/>
</LinearLayout>
