<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:background="@drawable/mine_ll"
              android:orientation="horizontal"
    >

    <TextView
        android:id="@id/appoint_tv"
        style="@style/common_tv"
        android:layout_marginLeft="@dimen/common_14dp"
        android:layout_weight="1"
        android:text="高三一班(40)"
        android:textColor="@color/grey_48"
        />

    <ImageView
        android:id="@id/appoint_cbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/common_14dp"
        android:src="@drawable/appoint_checkbox"
        />
</LinearLayout>